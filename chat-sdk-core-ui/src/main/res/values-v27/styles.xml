    <style name="CollapsingToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">?actionBarTextColor</item>
    </style>

    <style name="TextInput">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="MaterialButton">
        <item name="android:layout_height">@dimen/material_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="CircleIconStyle">
        <item name="android:layout_width">@dimen/small_avatar_width</item>
        <item name="android:layout_height">@dimen/small_avatar_height</item>
    </style>

    <style name="CardHeader">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="ImagePopupAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="LightTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ChatSDKTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ChatSDKTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="ChatSDKTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

